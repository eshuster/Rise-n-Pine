

<div class="main-container">

  <h1> New Article </h1>

  <%= form_for @article, :html => {:multipart => true},  url: articles_path do |f| %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %><br>
    </p>
    <p>
      <%= f.label :date %><br>
      <%= f.text_field :date %><br>
    </p>

    <p>
      <%= f.label :author %><br>
      <%= f.text_field :author %><br>
    </p>

     <p>
      <%= f.label :artist %><br>
      <%= f.text_field :artist %><br>
    </p>

   <p>
      <%= f.label :category %><br>
      <%= f.text_field :category %><br>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %><br>
    </p>


    <p>
      <%= f.file_field :image %>
    </p>


    <p class="article_submit">
      <%= f.submit %>
    </p>


  <%end%>


</div>